extends ../layout

block content
    header
        p
            a.button(href='books/new') Create New Book
        
        p= booksPerPage

        form(action="/books" method="post")
            p
                label(for='search') Search Books
                input(type='text' name='search' placeholder='Search..')
                input(type='submit' value='Search')
        if(searchedBooks !== totalBooks)
            p
                a.button(href='/books') All Books
                
    table
        thead
            tr
            th Title
            th Author
            th Genre
            th Year
        tbody#tbody
            //- each book in books.slice(0, booksPerPage)
            each book in books
                tr.bookRow
                    td
                        a(href=`books/${book.id}`)= book.title
                    td= book.author
                    td= book.genre
                    td= book.year
    p
        a.prev(href='#') Previous
        a.next(href='#') Next
